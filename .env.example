# Authentication: set API key OR use `claude login` for subscription auth
# CLAUDE_AUTH_MODE=auto  (auto | api_key | subscription)
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-5-20250929
# default: safer mode (recommended for shared templates)
# acceptEdits: auto-approves file edits, blocks dangerous ops
# bypassPermissions: approves everything (use with caution)
CLAUDE_PERMISSION_MODE=default
CLAUDE_SETTING_SOURCES=project,local
CLAUDE_MAX_RETRIES=2
CLAUDE_RETRY_BACKOFF_SECONDS=0.5
APP_LOCALE=en
APP_LOG_FORMAT=text
APP_LOG_LEVEL=INFO
# SDK sandbox mode (false by default for compatibility with current Streamlit workflow)
CLAUDE_SDK_SANDBOX_ENABLED=false

# Server-side file attachments (saved under ATTACHMENTS_STORAGE_DIR/session_id/)
ATTACHMENTS_ENABLED=true
ATTACHMENTS_MAX_FILE_MB=5
ATTACHMENTS_ALLOWED_EXT=txt,md,csv,json
ATTACHMENTS_STORAGE_DIR=uploads

# knowledge/ markdown lookup
KNOWLEDGE_ENABLED=true
KNOWLEDGE_DIR=knowledge
KNOWLEDGE_MAX_HITS=8

# Prompt context budget (knowledge + attachments + user message)
CONTEXT_MAX_CHARS=12000
